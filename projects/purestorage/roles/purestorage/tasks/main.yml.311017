---
- name: open RestAPI session
  uri:
    url: https://{{ arrayurl }}/api/{{ api_version }}/auth/session
    method: POST
    validate_certs: no
    return_content: yes
    body:
      api_token: "{{ array_token }}"
    body_format: json
  register: session

- name: create new volume
  uri:
    url: https://{{ arrayurl }}/api/{{ api_version }}/volume/{{ volname }}
    method: POST
    validate_certs: no
    HEADER_Cookie: "{{session.set_cookie}}"
    return_content: yes
    body:
      size: "{{ size }}"
    body_format: json
  ignore_errors: yes


- name: attach volume to host
  uri:
    url: https://{{ arrayurl }}/api/{{ api_version }}/host/{{ hostname }}/volume/{{ volname }}
    method: POST
    validate_certs: no
    HEADER_Cookie: "{{session.set_cookie}}"
    return_content: yes
  ignore_errors: yes

- name: List all hosts
  uri:
    url: https://{{ arrayurl }}/api/{{ api_version }}/host
    method: GET
    validate_certs: no
    HEADER_Cookie: "{{session.set_cookie}}"      
    return_contents: yes
    body_format: json
  ignore_errors: yes
  register: hosts

- name: Show hosts data
  debug: msg="{{ hosts.json}}"
